<div id="thread-display-section">
    <div class="dropdown open">
        <button
            class=" bg-white border-0 dropdown-toggle" 
            type="button"
            id="triggerId"
            data-bs-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false"
        >
            For you page
        </button>
        <div class="dropdown-menu" aria-labelledby="triggerId">
            <a class="dropdown-item" href="/home-feed">Following</a>
            <a class="dropdown-item on-active-page" href="#">For you page</a>
        </div>
    </div>
    
    <div class="thread-container">
        <div id="post-thread-trigger" class="thread-card d-flex flex-row" data-bs-toggle="modal" data-bs-target="#postThread">
            <div class="avatar-and-follow-icon align-items-center">
                <img src="/images/avatar.png" alt="avatar" class="border border-1 border-dark rounded-circle"
                    style="width: 36px; height:36px;">
            </div>
            <div class="card-content border border-0 d-flex justify-content-between align-items-center">
                <p>Needle your thread.....</p>
                <button type="button" name="" id="" class="btn btn-light border-dark py-1">
                    Post
                </button>

            </div>
        </div>
        {{>thread-card}}
        {{>thread-card}}
        {{>thread-card}}
        {{>thread-card}}
    </div>
</div>