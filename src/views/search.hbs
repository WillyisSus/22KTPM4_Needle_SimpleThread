<div id="thread-display-section">
        <div class="thread-container">
            <div id="post-thread-trigger" class="thread-card d-flex flex-row">
                <div class="card-content border border-0 d-flex justify-content-between align-items-center">
                    <form action="/search" method="get" class="w-100">
                        <div class="d-flex flex-row">
                            <input type="search" name="keyword" class="form-control rounded me-1" placeholder="Search for a name..." aria-label="Search" aria-describedby="search-addon" />
                            <button type="submit" class="btn btn-dark input-group-text border-0" id="search-addon">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                        
                    </form>
                </div>
            </div>
            <div class="w-100 border"></div>
            {{#each user}}
                {{> search-cards}}
            {{/each}}
        </div>
    </div>
</div>